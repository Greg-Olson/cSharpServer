<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
  </PropertyGroup>
  <Target Name="CopyViewDirectory" AfterTargets="Build">
    <Exec Command="cp -R &quot;$(ProjectDir)view&quot; &quot;$(TargetDir)view&quot;" IgnoreExitCode="true" />
  </Target>

</Project>
